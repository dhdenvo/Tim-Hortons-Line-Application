WindowManager:
    MainWindow:
    SecondWindow:

<Label>:
    color:0,0,0,1
    font_size:40

<Button>:
    color:1,1,1,1
    size_hint: 0.5, 0.5
    font_size:40

<MainWindow>:
    name:"main"

    GridLayout:
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size

        cols:1
        size: root.width, root.height

        Image:
            source:"tim.png"

        Image:
            source:"line.png"

        GridLayout:
            cols:2

            Label:
                text: "Line length: "

            Label:
                id:"people"
                text:"8"

            Label:
                text: "Time of last \nAI snapshot: "

            Label:
                id:"wait"
                text:"01:30 P.M"

        Button:
            text:"Crowd Source Wait Times"
            on_press: app.root.current = "camera"


<SecondWindow>:
    name:"camera"
    GridLayout:
        cols:1
        size: root.width, root.height

        Camera:
            id: camera
            resolution: (root.width, root.height)
            play: True

        Button:
            text:"Back"
            on_press: app.root.current = "main"
